{{#equals @root.$config.client.name 'angular'}}
import type { HttpClient } from '@angular/common/http';
import type { Observable } from 'rxjs';

import type { ApiRequestOptions } from './ApiRequestOptions{{@root.$config.output.extension}}';
import type { OpenAPIConfig } from './OpenAPI{{@root.$config.output.extension}}';
{{else}}
import type { ApiRequestOptions } from './ApiRequestOptions{{@root.$config.output.extension}}';
import type { CancelablePromise } from './CancelablePromise{{@root.$config.output.extension}}';
import type { OpenAPIConfig } from './OpenAPI{{@root.$config.output.extension}}';
{{/equals}}

export abstract class BaseHttpRequest {

	{{#equals @root.$config.client.name 'angular'}}
	constructor(
		public readonly config: OpenAPIConfig,
		public readonly http: HttpClient,
	) {}
	{{else}}
	constructor(public readonly config: OpenAPIConfig) {}
	{{/equals}}

	{{#equals @root.$config.client.name 'angular'}}
	public abstract request<T>(options: ApiRequestOptions<T>): Observable<T>;
	{{else}}
	public abstract request<T>(options: ApiRequestOptions<T>): CancelablePromise<T>;
	{{/equals}}
}
